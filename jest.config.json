{
  "roots": [
    "<rootDir>/packages",
    "<rootDir>/apps"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": "(test|spec)\\.[jt]sx?$",
  "collectCoverageFrom": [
    "packages/**/*.ts"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true,
      "tsconfig": "./tsconfig.dev.json",
      "diagnostics": false
    }
  },
  "verbose": true,
  "clearMocks": true
}
