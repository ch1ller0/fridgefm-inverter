{
  "roots": [
    "<rootDir>/src"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": "(test|spec)\\.[jt]sx?$",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true,
      "tsconfig": "tsconfig.dev.json",
      "diagnostics": false
    }
  },
  "verbose": true
}
