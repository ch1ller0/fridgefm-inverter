{
  "roots": [
    "<rootDir>/packages",
    "<rootDir>/examples"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testRegex": "(test|spec)\\.[jt]sx?$",
  "collectCoverageFrom": [
    "packages/**/*.ts",
    "examples/**/*.ts"
  ],
  "globals": {
    "ts-jest": {
      "isolatedModules": true,
      "tsconfig": "./tsconfig.dev.json",
      "diagnostics": false
    }
  },
  "moduleNameMapper": {
    "^@fridgefm/(.*)$": "<rootDir>/packages/$1/src/index.ts"
  },
  "verbose": true
}
